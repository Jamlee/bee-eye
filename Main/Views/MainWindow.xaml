<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:local="clr-namespace:Bee.Eye.Views"
        WindowStyle="None"
        ShowInTaskbar="False"
        AllowsTransparency="True"
        x:Name="PrimaryWindow"
        x:Class="Bee.Eye.Views.MainWindow"
        BorderThickness="24"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="700" Width="1260" ResizeMode="NoResize">
  <Window.Effect>
    <DropShadowEffect Opacity="0.3" Direction="90" Color="#FF3A3A3A" ShadowDepth="3" BlurRadius="24"/>
  </Window.Effect>
  <Grid x:Name="MainGrid" Width="1260">
    <ContentControl x:Name="EventRegion"  prism:RegionManager.RegionName="EventRegion" Margin="0,629,0,0" Height="40" />
    <ContentControl x:Name="NavRegion"  prism:RegionManager.RegionName="NavRegion" Height="39" MinHeight="30" VerticalAlignment="Top" />
    <ContentControl x:Name="MainRegion" prism:RegionManager.RegionName="MainRegion" Margin="0,30,0,102" HorizontalAlignment="Left" VerticalAlignment="Top"/>
  </Grid>
</Window>
