<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:local="clr-namespace:Bee.Eye.Views"
        WindowStyle="None"
        ShowInTaskbar="False"
        AllowsTransparency="True"
        x:Name="PrimaryWindow"
        x:Class="Bee.Eye.Views.MainWindow"
        BorderThickness="25"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="700" Width="1300" ResizeMode="NoResize">
  <Window.Effect>
    <DropShadowEffect Opacity="0.3" Direction="90" Color="#FF3A3A3A" ShadowDepth="3" BlurRadius="24"/>
  </Window.Effect>
  <Grid x:Name="MainGrid" Margin="0,0,0,0">
    <ContentControl x:Name="NavRegion"  prism:RegionManager.RegionName="NavRegion" MinHeight="30" Margin="0,0,0,475" HorizontalAlignment="Left" Width="1250" Height="175" />
    <ContentControl x:Name="MainRegion" prism:RegionManager.RegionName="MainRegion" Margin="0,175,0,0" HorizontalAlignment="Left" Width="1250" Height="475"/>
  </Grid>
</Window>
